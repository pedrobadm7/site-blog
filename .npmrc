# pnpm configuration for better compatibility
shamefully-hoist=true
strict-peer-dependencies=false
auto-install-peers=true
resolve-peers-from-workspace-root=false

# Hoisting configuration to resolve ESLint plugin dependencies
hoist-pattern[]=*eslint*
hoist-pattern[]=*@eslint*
hoist-pattern[]=*jsx-ast-utils*
hoist-pattern[]=*eslint-plugin-*
hoist-pattern[]=*@typescript-eslint*
